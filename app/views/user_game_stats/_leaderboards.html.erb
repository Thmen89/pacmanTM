<h1>Leaderboards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Wins</th>
      <th>Total games</th>
      <th>Total score</th>
      <th>Highest score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_game_stats.each do |user_game_stat| %>
      <tr>
        <td><%= user_game_stat.user.name %></td>
        <td><%= user_game_stat.wins %></td>
        <td><%= user_game_stat.total_games %></td>
        <td><%= user_game_stat.total_score %></td>
        <td><%= user_game_stat.highest_score %></td>
        <td><%= link_to 'Show', user_game_stat %></td>
        <td><%= link_to 'Edit', edit_user_game_stat_path(user_game_stat) %></td>
        <td><%= link_to 'Destroy', user_game_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
