<h1>Leaderboards</h1>

<table>
  <thead>
    <tr>
      <th><%= "Player" %></th>
      <th><%= sortable "score", "Score" %></th>
      <th><%= "Time started" %></th>
      <th><%= "Win" %></th>
      <th><%= "Duration" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user.name %></td>
        <td><%= game.score %></td>
        <td><%= game.time_started %></td>
        <td><%= game.win %></td>
        <td><%= game.duration %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
